<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".select">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:scaleType="fitCenter"
        android:src="@drawable/clock" />

    <Button
        android:id="@+id/btn_timezone"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="195dp"
        android:background="#00FAF6F6"
        android:onClick="onClickTimezone" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="160dp"
        android:background="#fff"
        android:src="@drawable/chart" />

    <Button
        android:id="@+id/btn_chart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="195dp"
        android:background="#00FAF6F6"
        android:onClick="onClickChart" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="390dp"
        android:background="#fff"
        android:src="@drawable/humid" />

    <Button
        android:id="@+id/btn_humid"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="400dp"
        android:background="#00FAF6F6"
        android:onClick="onClickHumid" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="390dp"
        android:background="#fff"
        android:src="@drawable/ther" />

    <Button
        android:id="@+id/btn_ther"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="400dp"
        android:background="#00FAF6F6"
        android:onClick="onClickTemp" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="310dp"
        android:background="@drawable/img"
        android:layout_marginTop="220dp"
        android:layout_marginStart="190dp"/>

    <ImageView
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:background="@drawable/img_1"
        android:layout_marginTop="370dp"
        android:layout_marginStart="50dp"/>

</FrameLayout>

